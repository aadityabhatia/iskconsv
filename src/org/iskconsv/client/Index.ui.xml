<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:pftf="urn:import:org.iskconsv.client.widget">
	<g:DockLayoutPanel unit='EM' ui:field="layoutPanel">
		<g:east size='28'>
			<g:StackLayoutPanel ui:field="stackPanel">
				<g:stack>
					<g:customHeader size="26">
						<g:HTML>
							Twitter Stream
							<a href='/twitter.html' target='_blank' title='Pop out'>
								<img src='/images/popout.gif' />
							</a>
						</g:HTML>
					</g:customHeader>
					<pftf:IFrame ui:field="twitterFrame" url="/misc/twitter.html"
						stylePrimaryName="iframe" />
				</g:stack>
				<!-- g:stack>
					<g:customHeader size="26">
						<g:HTML>
							Wave Conversation
							<a href='/misc/wave.jsp' target='_blank' title='Pop out'>
								<img src='/images/popout.gif' />
							</a>
						</g:HTML>
					</g:customHeader>
					<pftf:IFrame url="/misc/wave.jsp" stylePrimaryName="iframe" />
				</g:stack -->
			</g:StackLayoutPanel>
		</g:east>
		<g:north size='7'>
			<g:HTMLPanel>
				<g:Image url='/images/logo.png' height='6em' />
				<pftf:NavigationBar ui:field="topNavigationBar"
					styleName="navigationBar navigationBar-Top" />
			</g:HTMLPanel>
		</g:north>
		<g:north size="2">
			<g:MenuBar ui:field="menuBar">
				<g:MenuItem ui:field="homeMenuItem">Home</g:MenuItem>
				<g:MenuItem ui:field="agendaMenuItem">Events</g:MenuItem>
				<!-- g:MenuItem>
					Questions
					<g:MenuBar ui:field="questionsMenuBar" vertical="true" />
				</g:MenuItem -->
				<g:MenuItem ui:field="liveVideoMenuItem">Live Video</g:MenuItem>
				<g:MenuItem ui:field="signInMenuItem">Sign In</g:MenuItem>
				<g:MenuItem ui:field="subscribeMenuItem">Subscribe</g:MenuItem>
			</g:MenuBar>
		</g:north>
		<g:center>
			<g:CaptionPanel ui:field="contentPanel" styleName="contentWrapperPanel">
				<!-- Home page -->
				<g:HTML>
					<h3>Welcome to ISKCON of Silicon Valley</h3>
					<h4>
						Here's what's you can do:
						<ol>
							<li>View Events</li>
							<li>View Live Content: Video, Tweets, photos and more...</li>
							<li>Donate</li>
						</ol>
					</h4>
				</g:HTML>
			</g:CaptionPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>