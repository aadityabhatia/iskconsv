<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.iskconsv.client.resources.Resources" field="resources" />

	<ui:style type="org.iskconsv.client.view.Donate.Style">
		.button {
			padding: 10px;
			margin-left: 40px;
			margin-right: 40px;
			border-style: solid;
			border-width: 10px !important;
			font-size: large;
		}
		
		.selected {
			border-color: #0f0;
		}
		
		.quotationText {
			font-size: large;
			font: italic;
			font-weight: bold;
		}
		
		.text {
			font-size: large;
		}
		
		.donateButton {
			font-size: large;
			margin-left: 10px;
			margin-right: 10px;
		}
		
		.amountTextbox {
			text-align: center;
			width: 6em;
			font-size: large;
		}
		
		.amountButton {
			font-size: large;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.quotationText}">
			Lord Sri Krishna says (BG 9.26):
			<br />
			“If one offers Me with love and devotion and leaf, a flower, a fruit or water, I will accept it.”
		</div>
		<br />
		<br />

		<div class="{style.text}">
			Donate for:
		</div>
		<br />

		<div style="text-align: center">
			<g:Button ui:field="newTempleButton">New Temple</g:Button>
			<g:Button ui:field="operationsButton">Temple Operations</g:Button>
			<g:Button ui:field="sankirtanButton">Sankirtan</g:Button>
		</div>
		<br />

		<div style="text-align: center">
			<form ui:field="donationForm" method="post" action="https://www.paypal.com/cgi-bin/webscr"
				target="_blank">
				<g:Button ui:field="m10">-10</g:Button>
				<g:Button ui:field="m1">-1</g:Button>
				<input ui:field="donationAmount" type="text" class="{style.amountTextbox}" value="51"
					name="a3" />
				<g:Button ui:field="p1">+1</g:Button>
				<g:Button ui:field="p10">+10</g:Button>

				<input ui:field="donationItemName" type="hidden" name="item_name" />
				<input type="hidden" value="teamisv@gmail.com" name="business" />
				<input type="hidden" value="1" name="p3" />
				<input type="hidden" value="M" name="t3" />
				<input type="hidden" value="1" name="src" />
				<input type="hidden" value="1" name="sra" />
				<input type="hidden" name="return" value="http://www.iskconsv.org/payment-complete/" />
				<input ui:field="donationType" type="hidden" value="" name="cmd" />
				<input type="hidden" value="1" name="no_note" />
				<input type="hidden" value="USD" name="currency_code" />
				<input type="hidden" value="US" name="lc" />
			</form>
			<br />
			<br />
			<div style="text-align:center">
				<g:Button ui:field="donateOnceButton">Donate Once</g:Button>
				<g:Button ui:field="donateMonthlyButton">Donate Monthly</g:Button>
			</div>
		</div>
		<br />
		<br />
		<div class="{style.text}">
			Donations to the temple are tax deductible. Receipts are available upon request.
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 